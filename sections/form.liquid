<div class="headerMainContent formMain">
  <div class="formWrapper">
    <div class="formInfo">
      <div><img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/D_and_D_logo.svg?v=1696082767" alt=""></div>
      <div>
        <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/logo_2020_1_1.svg?v=1695999866" alt="">
        <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Line_1.png?v=1695991860" alt="">
        <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Component_1.svg?v=1695991865" alt="">
      </div>
    </div>
    <div class="formInfo">
      <div class="formTexts">
        <h3>Enter now for a chance to win</h3>
        <h2>two tickets to dozers & dirt</h2>
        <p>Includes: A chance for your child to operate heavy equipment, get up close to a RAVEN helicopter, & more!</p>
      </div>
      <div>
        {% form 'contact' %}
          {{ form.errors | default_errors }}

          <div class="first-name">

            <input
              type="text"
              name="contact[first_name]"
              id="first-name"
              placeholder="First name"
              class="formulary" />
          </div>

          <div class="last-name">

            <input
              type="text"
              name="contact[last_name]"
              id="last-name"
              placeholder="Last name"
              class="formulary" />
          </div>

          <div class="email">

            <input
              type="email"
              name="contact[email]"
              id="email"
              placeholder="Email"
              class="formulary" />
          </div>

          <div class="phone">

            <input
              type="tel"
              name="contact[phone]"
              id="phone"
              placeholder="Phone"
              class="formulary" />
          </div>


          <div class="zipCode">
            <input
              name="contact[zipcode]"
              id="zipCode"
              placeholder="Zip Code"
              class="formulary" />
          </div>

          <div class="submit">
            <input
              type="submit"
              value="Submit"
              class="buttons" />
          </div>
        {% endform %}

      </div>
      <div class="formTexts">
        <span>NO PURCHASE NECESSARY. Starts 9/13/23; Ends 9/22/23. Winners will be selected & notified xxxxxxxx.</span>
      </div>
    </div>
  </div>
</div>

<style>
  .formMain {
    background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/ba5820c5acf8872790f8ca3ff9043af7.jpg?v=1696038766');
  }
  .formWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  .formInfo {
    display: flex;
    flex-direction: column;
    width: 50vw;
    align-items: center;

  }
  .formTexts {
    color: #FFF;
    font-family: 'Kanit', sans-serif;

  }
  .formTexts h3 {
    font-size: 32px;
    font-weight: 700;
    text-transform: uppercase;
  }
  .formTexts h2 {
    font-size: 88px;
    text-transform: uppercase;
    font-weight: 700;

  }
  .formTexts p {
    font-size: 24px;
    font-weight: 500;
  }
  .formTexts span {
    font-size: 16px;
    font-weight: 400;
  }
</style>