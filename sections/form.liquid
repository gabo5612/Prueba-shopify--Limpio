<div class="formMain">
  <div class="formWrapper">
    <div class="formInfo firstFormInfo">
      <div class="formTractorImg"><img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/D_and_D_logo.svg?v=1696082767" alt=""></div>
      <div class='bottonPartFirstFormInfo'>
        <img
          src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/logo_2020_1_1.svg?v=1695999866"
          alt=""
          class="headerBottonImg">
        <img
          src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Line_1.png?v=1695991860"
          alt=""
          class="headerBottonLine">
        <img
          src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Component_1.svg?v=1695991865"
          alt=""
          class="headerBottonImg">
      </div>
    </div>
    <div class="formInfo secondFormInfo">
      <div class="formTexts">
        <h3>Enter now for a chance to win</h3>
        <h2>two tickets to dozers & dirt</h2>
        <p>Includes: A chance for your child to operate heavy equipment, get up close to a RAVEN helicopter, & more!</p>
      </div>
      <div class="formInputWrapper">
        {% form 'contact' %}
          {{ form.errors | default_errors }}

          <div class="fullName">

            <input
              type="text"
              name="contact[first_name]"
              id="first-name"
              placeholder="First name"
              class="formulary" />
            <input
              type="text"
              name="contact[last_name]"
              id="last-name"
              placeholder="Last name"
              class="formulary" />
          </div>
          <div class="email">

            <input
              type="email"
              name="contact[email]"
              id="email"
              placeholder="Email"
              class="formulary bottonFormulary" />
          </div>

          <div class="phone">

            <input
              type="tel"
              name="contact[phone]"
              id="phone"
              placeholder="Phone"
              class="formulary bottonFormulary" />
          </div>


          <div class="zipCode">
            <input
              name="contact[zipcode]"
              id="zipCode"
              placeholder="Zip Code"
              class="formulary bottonFormulary" />
          </div>

          <div class="submit">
            <input
              type="submit"
              value="Submit"
              class="buttons formButton" />
          </div>
        {% endform %}

      </div>
      <div class="formTexts">
        <span>NO PURCHASE NECESSARY. Starts 9/13/23; Ends 9/22/23. Winners will be selected & notified xxxxxxxx.</span>
      </div>
    </div>
  </div>
</div>

<style>

  .formMain {
    background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/ba5820c5acf8872790f8ca3ff9043af7.jpg?v=1696038766');
    height: 100vh;
    background-size: cover;
    background-repeat: no-repeat;
    width: calc(100% - 4rem / var(--font-body-scale));
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    z-index: 0;
  }
  .formWrapper {
    display: flex;
    align-items: center;
    height: 100vh;
    gap: 35px;
    margin: 50px 15px;
    flex-direction: column;
  }
  .formTractorImg img {
    width: 285px;

  }
  .formInfo {
    display: flex;
    flex-direction: column;

  }
  .firstFormInfo {
    align-items: center;
  }
  .bottonPartFirstFormInfo {
    display: flex;
    gap: 25px;
    margin-top: 12px;
  }
  .formTexts {
    color: #FFF;
    font-family: 'Kanit', sans-serif;
    text-align: center;

  }
  .formTexts h3 {
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
  }
  .formTexts h2 {
    font-size: 2.4rem;
    text-transform: uppercase;
    font-weight: 700;
    margin: 10px 0;
  }
  .formTexts p {
    font-size: 0.9rem;
    font-weight: 500;
    text-align: justify;

  }
  .formTexts span {
    font-size: 0.7rem;
    font-weight: 400;
  }
  .formulary {
    color: #BBB;
    font-family: 'Kanit', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    border-radius: 4px;
    margin-bottom: 16px;
    width: 90vw;
    padding: 10px;
  }
  .fullName {
    padding-top: 24px;
  }
  .formButton {
    padding: 18px;
    margin-bottom: 16px;
    width: -webkit-fill-available;
  }
  @media(min-width: 769px) {
    .formulary {
      width: 94vw;
    }
    .formTexts p {
      text-align: center;
    }
    .formWrapper {
      margin: 60px 15px;
    }
  }
  @media(min-width: 1023px) {
    .formWrapper {
      flex-direction: row;
    }

    .fullName {
      padding-top: 24px;
      display: flex;
      gap: 12px;
      align-items: center; /* Align inputs vertically in the center */
    }

    .formulary {
      width: 50%; /* Set each input to take up 50% of the available width */
      margin: 0; /* Remove margin from inputs */
    }

    .fullName input {
      width: auto; /* Allow the inputs to expand to fit their content */
    }
  }

  @media(min-width: 1439px) {}
</style>
{% schema %}
  {
    "name": "form",

    "presets": [
      {
        "name": "form"

      }
    ]
  }
{% endschema %}