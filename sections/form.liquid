<div class="headerMainContent formMain">
  <div class="formWrapper">
  <div class="formInfo">
    <div><img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/D_and_D_logo.svg?v=1696082767" alt=""></div>
    <div>
      <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/logo_2020_1_1.svg?v=1695999866" alt="">
      <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Line_1.png?v=1695991860" alt="">
      <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Component_1.svg?v=1695991865" alt="">
    </div>
  </div>
  <div class="formInfo">
    <div class="formTexts">
      <h3>Enter now for a chance to win</h3>
      <h2>two tickets to dozers & dirt</h2>
      <p>Includes: A chance for your child to operate heavy equipment, get up close to a RAVEN helicopter, & more!</p>
    </div>
    <div>
      {% form 'contact' %}
        {{ form.errors | default_errors }}
      
        <div class="first-name">
          <label for="first-name">First name</label>
          <input type="text" name="contact[first_name]" id="first-name" />
        </div>
      
        <div class="last-name">
          <label for="last-name">Last name</label>
          <input type="text" name="contact[last_name]" id="last-name" />
        </div>
        
        <div class="email">
          <label for="email">Email</label>
          <input type="email" name="contact[email]" id="email" />
        </div>
      
        <div class="phone">
          <label for="phone">Phone</label>
          <input type="tel" name="contact[phone]" id="phone" />
        </div>
      
      
        <div class="zipCode">
          <label for="zipCode">Zip Code</label>
          <textarea name="contact[body]" id="zipCode"></textarea>
        </div>
      
        <div class="submit">
          <input type="submit" value="Create" class="buttons"/>
        </div>
      {% endform %}
      
    </div>
    <div class="formTexts"><span>NO PURCHASE NECESSARY. Starts 9/13/23; Ends 9/22/23. Winners will be selected & notified xxxxxxxx.</span></div>
  </div>
  </div>
</div>

