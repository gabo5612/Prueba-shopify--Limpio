<div class="videoMain">
  <div class="wraper">
    <iframe
      src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}"
      class="youtube"
      allow="autoplay; encrypted-media"></iframe>
  </div>
</div>

<style>
  .videoMain {
    display: grid;
    justify-items: center;
  }
</style>



{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Video section heading",
        "default": "Title"
      }
    ],
    "presets": [
      {
        "name": "Video by URL"
      }
    ]
  }
{% endschema %}