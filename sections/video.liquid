<div class="videoMain">
  <div class="wraperVideo">
    <video
      src="{{section.settings.video.sources[1].url}}"
      muted
      controls></video>
  </div>
</div>

<style>

  .videoMain {
    display: grid;
    justify-items: center;
    margin-bottom: 120px;
  }
  .wraperVideo video {
    width: 90vw;
  }
  @media(min-width: 769px) {}
  @media(min-width: 1023px) {}
  @media(min-width: 1439px) {}
</style>



{% schema %}
  {
    "name": "Video",
    "class": "video-section",
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Select your video"
      }
    ],
    "presets": [
      {
        "name": "Video"
      }
    ]
  }
{% endschema %}