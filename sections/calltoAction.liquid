<div class="callToAction">
  <div class="wrapperCallToAction">
    <h3>VISIT YOUR LOCAL MOUNTAIN STATES FORD DEALER</h3>
    <a href="{{section.settings.callToActionURL}}">
      <button class="buttons">Locate Dealer</button>
    </a>
  </div>
</div>
<style>

  .callToAction {
    background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/7fd43e27e092879c2eaab9e803264b36_9523b302-9de7-4a68-9269-9193f5a1b151.jpg?v=1696196239');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: bottom;
    height: 70vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .wrapperCallToAction {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .wrapperCallToAction h3 {

    color: #00095B;
    text-align: center;
    font-family: 'Kanit', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    text-transform: uppercase;
    margin-bottom: 20px;
  }
  @media(min-width: 769px) {
    .wrapperCallToAction h3 {

      width: 50vw;
    }
  }
  @media(min-width: 1023px) {
    .wrapperCallToAction h3 {
      font-size: 4rem;
      line-height: 80px;
      width: 50vw;
    }
  }
  @media(min-width: 1439px) {}
</style>

{% schema %}
  {
    "name": "Call To Action",
    "settings": [
      {
        "type": "url",
        "id": "callToActionURL",
        "label": "Button URL"
      }

    ],
    "presets": [
      {
        "name": "Call to Action"
      }
    ]
  }
{% endschema %}