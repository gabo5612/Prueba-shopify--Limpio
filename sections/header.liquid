<div class="headerMainContent headBackground">
  <div class="wrapper">
    <div class="topIconHeader">
      <img src="{{ section.settings.iconoIzquierdoHeader | img_url }}" alt="">
    </div>
    <div class="textButtonHeader">
      <h2>{{ section.settings.subtitleHeader }}</h2>
      <h1>{{ section.settings.titleHeader }}</h1>
      <p>{{ section.settings.textHeader }}</p>
      <a href="{{section.settings.urlButton}}">
        <button class="buttons">{{ section.settings.buttonText }}</button>
      </a>
    </div>
  </div>
  <div class="headerBotton">
    {% if section.settings.bottonRightImg1 != blank and section.settings.bottonRightImg3 != blank %}
      <img
        src="{{ section.settings.bottonRightImg1 | img_url }}"
        alt=""
        class="headerBottonImg">
      <img
        src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Line_1.png?v=1695991860"
        alt=""
        class="headerBottonLine">
      <img
        src="{{ section.settings.bottonRightImg3 | img_url }}"
        alt=""
        class="headerBottonImg">

    {% else section.settings.bottonRightImg1 != blank and section.settings.bottonRightImg3 %}

      <img
        src="{{ section.settings.bottonRightImg3 | img_url }}"
        alt=""
        class="headerBottonImg">
    {% else %}
      <img
        src="{{ section.settings.bottonRightImg1 | img_url }}"
        alt=""
        class="headerBottonImg">
    {% endif %}
  </div>
</div>

<style>

  .headerMainContent {
    background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/headerMobile.jpg?v=1696166330');
    background-size: cover;
    background-repeat: no-repeat;
    height: 85vh;
    width: calc(100% - 4rem / var(--font-body-scale));
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    z-index: 0;
  }
  .headerMainContent::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.48);
    z-index: -1;
  }

  .headerBotton {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 60px;
  }
  .headerBottonImg {
    width: 150px;
  }
  .headerBottonLine {
    width: 2px;
  }
  .headerBotton img:nth-child(1).topIconHeader {
    margin: 25px 0 35px 20px;
  }
  .topIconHeader img {
    width: 100px;
    margin: 20px;
  }
  .textButtonHeader {
    font-family: 'Kanit', sans-serif;
    color: #fff;
    margin: 0 20px;
    font-weight: 700;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 45vh;
    align-items: center;
  }
  .textButtonHeader h2 {
    font-size: 1.7rem;
  }
  .textButtonHeader h1 {
    font-size: 1.8rem;
    padding-top: 10px;
    font-weight: 900;
  }
  .textButtonHeader p {
    font-size: 1.3rem;
    text-align: justify;
    margin: 0;
    width: 70vw;
  }
  .buttons {
    background: #37A9E8;
    color: #fff;
    padding: 20px;
    border: none;
    border-radius: 4px;
    font-size: 24px;
    font-weight: 600;
  }

  @media(min-width: 769px) {
    .headerMainContent {
      background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/HeaderDesktop.jpg?v=1696166334');
      height: 95vh;
    }
  }

  @media(min-width: 1439px) {
    .headerMainContent {
      background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Header4k.jpg?v=1696166340');
      height: 95vh;
    }
    .topIconHeader {
      margin: 40px 0 120px 40px;
    }



  }
</style>
{% schema %}
  {
    "name": "header-info",
    "settings": [
      {
        "type": "image_picker",
        "id": "iconoIzquierdoHeader",
        "label": "Enter the top left icon"
      },
      {
        "type": "text",
        "id": "subtitleHeader",
        "label": "Subtitle"
      },
      {
        "type": "text",
        "id": "titleHeader",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "textHeader",
        "label": "Text"
      }, {
        "type": "text",
        "id": "buttonText",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "urlButton",
        "label": "Button URL"
      }, {
        "type": "image_picker",
        "id": "bottonRightImg1",
        "label": "Botton Imagen 1"
      }, {
        "type": "image_picker",
        "id": "bottonRightImg3",
        "label": "Botton Imagen 3"
      }

    ],
    "presets": [
      {
        "name": "Header-Settings"
      }
    ]

  }
{% endschema %}