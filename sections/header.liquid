<div class="headerMainContent headBackground">
  <div class="wrapper">
    <div class="topIconHeader">
      <img src="{{ section.settings.iconoIzquierdoHeader | img_url }}" alt="">
    </div>
    <div class="textButtonHeader">
      <h2>{{ section.settings.subtitleHeader }}</h2>
      <h1>{{ section.settings.titleHeader }}</h1>
      <p>{{ section.settings.textHeader }}</p>
      <a href="{{section.settings.urlButton}}">
        <button class="buttons">{{ section.settings.buttonText }}</button>
      </a>
    </div>
  </div>
  <div class="headerBotton">
    {% if section.settings.bottonRightImg1 != blank and section.settings.bottonRightImg3 != blank %}
      <img src="{{ section.settings.bottonRightImg1 | img_url }}" alt="">
      <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Line_1.png?v=1695991860" alt="">
      <img src="{{ section.settings.bottonRightImg3 | img_url }}" alt="">

    {% else section.settings.bottonRightImg1 != blank and section.settings.bottonRightImg3 %}

      <img src="{{ section.settings.bottonRightImg3 | img_url }}" alt="">
    {% else %}
      <img src="{{ section.settings.bottonRightImg1 | img_url }}" alt="">
    {% endif %}
  </div>
</div>

<style>

  @media(min-width: 750px) {
    .headerMainContent {
      background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/8f8a289bedb414d0801d25743a5efc7b.jpg?v=1695854464');
      background-size: cover;
      background-repeat: no-repeat;
      height: 95vh;
      width: calc(100% - 4rem / var(--font-body-scale));
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      position: relative;
      z-index: 0;
    }

    .headerMainContent::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.4); /* Color de fondo oscuro con una opacidad del 40% */
      z-index: -1;
    }


    .headerBotton {
      width: 98vw;
      display: flex;
      justify-content: end;
      gap: 40px;
      margin-bottom: 60px;
    }
    .topIconHeader {
      margin: 40px 0 120px 40px;
    }
    .textButtonHeader {
      font-family: 'Kanit', sans-serif;
      color: #fff;
      margin-left: 175px;
      font-weight: 700;
    }
    .textButtonHeader h2 {
      font-size: 56px;
    }
    .textButtonHeader h1 {
      font-size: 112px;
      padding-top: 32px;
    }
    .textButtonHeader p {
      font-size: 24px;
      line-height: 32px;

      margin: 48px 0;
    }
    .buttons {
      background: #37A9E8;
      color: #fff;
      padding: 32px;
      border: none;
      border-radius: 4px;
      font-size: 24px;
      font-weight: 600;
    }
  }
</style>

{% schema %}
  {
    "name": "header-info",
    "settings": [
      {
        "type": "image_picker",
        "id": "iconoIzquierdoHeader",
        "label": "Enter the top left icon"
      },
      {
        "type": "text",
        "id": "subtitleHeader",
        "label": "Subtitle"
      },
      {
        "type": "text",
        "id": "titleHeader",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "textHeader",
        "label": "Text"
      }, {
        "type": "text",
        "id": "buttonText",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "urlButton",
        "label": "Button URL"
      }, {
        "type": "image_picker",
        "id": "bottonRightImg1",
        "label": "Botton Imagen 1"
      }, {
        "type": "image_picker",
        "id": "bottonRightImg3",
        "label": "Botton Imagen 3"
      }

    ],
    "presets": [
      {
        "name": "Header-Settings"
      }
    ]

  }
{% endschema %}