<div class="headerMainContent headBackground">
  <div class="wrapper">
    <div class="topIconHeader">
      <img
        src="{{ section.settings.iconoIzquierdoHeader | img_url }}"
        alt=""
        loading="lazy">
    </div>
    <div class="textButtonHeader">
      <h2>{{ section.settings.subtitleHeader }}</h2>
      <h1>{{ section.settings.titleHeader }}</h1>
      <p>{{ section.settings.textHeader }}</p>
      <a href="{{section.settings.urlButton}}">
        <button class="buttons">{{ section.settings.buttonText }}</button>
      </a>
    </div>
  </div>
  <div class="headerBotton">
    {% if section.settings.bottonRightImg1 != blank and section.settings.bottonRightImg3 != blank %}
      <img
        src="{{ section.settings.bottonRightImg1 | img_url }}"
        alt=""
        class="headerBottonImg"
        loading="lazy">
      <img
        src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Line_1.png?v=1695991860"
        alt=""
        class="headerBottonLine"
        loading="lazy">
      <img
        src="{{ section.settings.bottonRightImg3 | img_url }}"
        alt=""
        class="headerBottonImg"
        loading="lazy">

    {% else section.settings.bottonRightImg1 != blank and section.settings.bottonRightImg3 %}

      <img
        src="{{ section.settings.bottonRightImg3 | img_url }}"
        alt=""
        class="headerBottonImg"
        loading="lazy">
    {% else %}
      <img
        src="{{ section.settings.bottonRightImg1 | img_url }}"
        alt=""
        class="headerBottonImg"
        loading="lazy">
    {% endif %}
  </div>
</div>

<style>

  .headerMainContent {
    background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/headerMobile.jpg?v=1696166330');
    background-size: cover;
    background-repeat: no-repeat;
    height: 85vh;
    width: calc(100% - 4rem / var(--font-body-scale));
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    z-index: 0;
  }
  .headerMainContent::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.48);
    z-index: -1;
  }

  .headerBotton {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 60px;
  }
  .headerBottonImg {
    width: 150px;
  }
  .headerBottonLine {
    width: 2px;
  }
  .headerBotton img:nth-child(1).topIconHeader {
    margin: 25px 0 35px 20px;
  }
  .topIconHeader img {
    width: 100px;
    margin: 20px;
  }
  .textButtonHeader {
    font-family: 'Kanit', sans-serif;
    color: #fff;
    margin: 0 20px;
    font-weight: 700;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 45vh;
    align-items: center;
  }
  .textButtonHeader h2 {
    font-size: 1.7rem;
  }
  .textButtonHeader h1 {
    font-size: 1.8rem;
    padding-top: 10px;
    font-weight: 900;
  }
  .textButtonHeader p {
    font-size: 1.3rem;
    text-align: justify;
    margin: 0;
    line-height: 24px;
  }
  .buttons {
    background: #37A9E8;
    color: #fff;
    padding: 20px;
    border: none;
    border-radius: 4px;
    font-size: 24px;
    font-weight: 600;
    box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.15);
    animation-delay: 0.2ms;
    transition: 0.5s;
  }
  .buttons:hover {
    transition: 0.5s;
    animation-duration: 0.3s;
    scale: 0.5px;
  }

  @media(min-width: 769px) {
    .headerMainContent {
      background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/HeaderDesktop.jpg?v=1696166334');
      height: 95vh;
    }
    .topIconHeader img {
      width: 130px;
      margin: 30px;
    }
    .textButtonHeader h1 {
      font-size: 2.7rem;
    }
    .textButtonHeader {
      height: 55vh;
    }
    .textButtonHeader h2 {
      font-size: 2rem;
    }
    .textButtonHeader p {
      width: 70vw;
    }
    .buttons {
      padding: 25px
    }
    .headerBottonImg {
      width: 185px;
    }
    .headerBottonLine {
      width: 3px;
    }
  }
  @media(min-width: 1023px) {
    .topIconHeader img {
      width: 150px;
      margin: 35px;
    }
    .headerBotton {
      justify-content: flex-end;
      margin-right: 25px;
    }
    .textButtonHeader {
      align-items: normal;
      justify-content: center;
      width: 60vw;
      margin: 0 175px;
    }
    .textButtonHeader h1 {
      font-size: 3em;
      padding-top: 5px;
      padding-bottom: 20px;
    }
    .textButtonHeader h2 {
      font-size: 2.5rem;
    }

    .textButtonHeader p {
      font-size: 1.2rem;
      width: auto;
      text-align: left;
      padding-bottom: 20px
    }
  }
  @media(min-width: 1439px) {
    .headerMainContent {
      background-image: url('https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Header4k.jpg?v=1696166340');

    }
    .textButtonHeader h2 {
      font-size: 3rem;
    }
    .textButtonHeader h1 {
      font-size: 5em;
    }
    .textButtonHeader p {
      padding-bottom: 30px;
      font-size: 1.4rem;
      line-height: 32px;
    }
    .buttons {
      padding: 32px;
    }
    .topIconHeader img {
      margin: 45px;
    }
  }
</style>
{% schema %}
  {
    "name": "header-info",
    "settings": [
      {
        "type": "image_picker",
        "id": "iconoIzquierdoHeader",
        "label": "Enter the top left icon"
      },
      {
        "type": "text",
        "id": "subtitleHeader",
        "label": "Subtitle"
      },
      {
        "type": "text",
        "id": "titleHeader",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "textHeader",
        "label": "Text"
      }, {
        "type": "text",
        "id": "buttonText",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "urlButton",
        "label": "Button URL"
      }, {
        "type": "image_picker",
        "id": "bottonRightImg1",
        "label": "Botton Imagen 1"
      }, {
        "type": "image_picker",
        "id": "bottonRightImg3",
        "label": "Botton Imagen 3"
      }

    ],
    "presets": [
      {
        "name": "Header-Settings"
      }
    ]

  }
{% endschema %}