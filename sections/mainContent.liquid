<div class="mainContent">
  <div class="mainContentTop">
    <img
      src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Texture.svg?v=1695855363"
      alt=""
      class="topImgMainContent"
      loading="lazy">
    <div class="mainContentWraper">
      <div class="mainContentMid ">
        <img
          src="{{section.settings.mainImage | img_url}}"
          alt=""
          class="imgHover entryAni">
        <p>{{ section.settings.textMainContent }}</p>
      </div>
      <div class="mainContentBotton ">
        <img
          src="{{section.settings.imagenMain1 | img_url: '450x450'}}"
          alt=""
          loading="lazy"
          class="imgHover entryAni">
        <img
          src="{{section.settings.imagenMain2 | img_url: '450x450'}}"
          alt=""
          loading="lazy"
          class="imgHover entryAni">
        <img
          src="{{section.settings.imagenMain3 | img_url: '450x450'}}"
          alt=""
          loading="lazy"
          class="imgHover entryAni">
      </div>
    </div>
  </div>

</div>
<style>
  .mainContentTop {
    width: 99vw;
  }
  .mainContent {
    position: relative;
    z-index: 1;
    margin-top: -25px;
  }
  .topImgMainContent {
    width: 99vw;
    height: 40px;

  }
  .mainContentMid {
    display: grid;
    justify-items: center;
  }
  .mainContentMid img {
    width: 200px;

  }

  .mainContentMid p {
    width: 90vw;
    font-size: 24px;
    font-family: 'DM Sans', sans-serif;
    text-align: center;
    line-height: 28px;
    margin: 62px 0;
    color: #4D4D4D;

  }
  .mainContentBotton {
    display: flex;
    gap: 12px;
    margin-bottom: 55px;
    flex-wrap: wrap;
    justify-content: center;
  }
  .mainContentBotton img {
    width: 175px;
    height: 175px;
    object-fit: cover;
    object-position: left;

  }
  .mainContentBotton img:first-child {
    object-position: right;
  }
  .mainContentWraper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 40px;
  }
  @media(min-width: 1023px) {
    .mainContentMid img {
      width: 275px;
    }
    .mainContentMid p {
      width: 50vw;
      font-size: 24px;
    }
    .mainContentBotton img {
      width: 300px;
      height: 300px;
    }
  }
  @media(min-width: 1439px) {
    .mainContentMid img {
      width: 416px;
    }
    .mainContentBotton {
      margin-bottom: 150px;
    }
    .mainContentBotton img {
      width: 416px;
      height: 416px;
    }
    .mainContentMid p {
      width: 30vw;
      line-height: 32px;
      font-size: 24px;
    }
  }
</style>
{% schema %}
  {
    "name": "Main-Info",
    "settings": [
      {
        "type": "image_picker",
        "id": "mainImage",
        "label": "Enter top main Image"
      },
      {
        "type": "text",
        "id": "textMainContent",
        "label": "Text MainContent"
      },
      {
        "type": "image_picker",
        "id": "imagenMain1",
        "label": "Botton Imagen 1"
      },
      {
        "type": "image_picker",
        "id": "imagenMain2",
        "label": "Botton Imagen 2"
      }, {
        "type": "image_picker",
        "id": "imagenMain3",
        "label": "Botton Imagen 3"
      }
    ],
    "presets": [
      {
        "name": "MainContent-Settings"
      }
    ]
  }
{% endschema %}