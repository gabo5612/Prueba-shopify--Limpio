<div class="mainContent">
  <div class="mainContentTop">
    <img src="https://cdn.shopify.com/s/files/1/0832/5244/5464/files/Texture.svg?v=1695855363" alt="">
    <div class="mainContentMid">
      <img src="{{section.settings.mainImage}}" alt="">
      <p>{{ section.settings.textMainContent }}</p>
    </div>
    <div class="mainContentBotton">
      <img src="{{section.settings.imagenMain1}}" alt="">
      <img src="{{section.settings.imagenMain2}}" alt="">
      <img src="{{section.settings.imagenMain3}}" alt="">
    </div>
  </div>
</div>
<style>
  .mainContent {
    position: relative;
    z-index: 1;

    margin-top: -41px;
  }
  .mainContentTop img {
    width: 94vw;

  }
</style>

{% schema %}
  {
    "name": "Main-Info",
    "settings": [
      {
        "type": "image_picker",
        "id": "mainImage",
        "label": "Enter top main Image"
      },
      {
        "type": "text",
        "id": "textMainContent",
        "label": "Text MainContent"
      },
      {
        "type": "image_picker",
        "id": "imagenMain1",
        "label": "Botton Imagen 1"
      },
      {
        "type": "image_picker",
        "id": "imagenMain2",
        "label": "Botton Imagen 2"
      }, {
        "type": "image_picker",
        "id": "imagenMain3",
        "label": "Botton Imagen 3"
      }
    ],
    "presets": [
      {
        "name": "MainContent-Settings"
      }
    ]
  }
{% endschema %}