<div class="featuredProducts">
  <h3>Featured Products</h3>
  {% for product in collections['Hydrogen'].products %}
    <div class="product">
      <img src="{{ product.featured_image | image_url: width: 1920 | prepend: "https:" }}" alt="{{ product.title }}" />
      <h2>{{ product.title }}</h2>
      <p>Precio: {{ product.price }}</p>
    </div>
  {% endfor %}
</div>

<style>
  .featuredProducts {
    background-color: #f7f7f7;
    padding: 24px;
  }
  .featuredProducts h3 {
    font-family: 'Kanit', sans-serif;
    font-size: 1.2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 20px;
    color: #00095B;
  }
  .product {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-wrap: wrap;
  }
  .product img {
    width: 175px;
  }
</style>